<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/' >
  <!--  CONSOLE appender  -->
  <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
        value="%d [%-5p]: %c %t - %m%n" />
    </layout>
  </appender>
  <appender name="ROLLINGFILE" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="{{ talend_log_path }}/reporting.log"/>
    <param name="MaxFileSize" value="10000KB"/>
    <!-- Keep one backup file -->
    <param name="MaxBackupIndex" value="5"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%-5p]: %c %t - %m%n"/>
    </layout>
  </appender>
  <appender name="ROLLINGFILEPRETTY" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="{{ talend_log_path }}/reporting_pretty.log"/>
    <param name="MaxFileSize" value="10000KB"/>
    <!-- Keep one backup file -->
    <param name="MaxBackupIndex" value="5"/>
    <param name="Threshold" value="WARN"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%-5p]: %c %t - %m%n"/>
    </layout>
  </appender>

  <appender name="ROLLINGFILEERROR" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="{{ talend_log_path }}/reporting_error.log"/>
    <param name="MaxFileSize" value="10000KB"/>
    <!-- Keep one backup file -->
    <param name="MaxBackupIndex" value="2"/>
    <param name="Threshold" value="ERROR"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%-5p]: %c %t - %m%n"/>
    </layout>
  </appender>

  <!-- Spring Logger -->
  <logger name="log4j.logger.org.springframework">
    <level value="WARN" />
    <appender-ref ref="CONSOLE"/>
  </logger>
  <!-- throwableRenderer <throwableRenderer class="org.apache.log4j.EnhancedThrowableRenderer"/>-->
  <!-- Root Logger -->
  <root>
    <priority value ="info"/>
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="ROLLINGFILE"/>
    <appender-ref ref="ROLLINGFILEPRETTY"/>
    <appender-ref ref="ROLLINGFILEERROR"/>

  </root>
</log4j:configuration>

